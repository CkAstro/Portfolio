{
   "compilerOptions": {
      "noEmit": true,
      "strict": true,
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "allowJs": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "useUnknownInCatchVariables": true,
      "paths": {
         "@/types": ["../types"],
         "@/test": ["test"],
         "@/core": ["../core", "../core/*"], // ../core for compiling, ../core/* for intellisense
         "@/*": ["src/*"]
      },
      // "traceResolution": true, // turn on to debug paths
      "baseUrl": ".",
      "typeRoots": ["../types", "../types/*", "node_modules/@types", "../core/index.d.ts"]
   },
   "exclude": ["node_modules", "server/node_modules"],
   "include": ["src/**/*", "../types", "../types/*", "../core", "../core/index.ts", "test"]
}
